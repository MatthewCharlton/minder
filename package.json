{
  "name": "auditor-ci",
  "version": "1.0.0",
  "description": "Runs NPM or Yarn audit and can be configured to fail builds if the audit finds vulnerable packages",
  "main": "dist/index.js",
  "bin": "bin/auditor-ci.js",
  "files": [
    "/dist",
    "/bin"
  ],
  "scripts": {
    "test": "jest --silent --config jest.config.json",
    "rollup": "rollup -c rollup.config.js",
    "bin": "mkdir -p bin && cp src/bin.js bin/auditor-ci.js",
    "build": "npm run rollup && npm run bin",
    "auditor-ci": "node bin/auditor-ci.js",
    "release": "npm run test && npm run auditor-ci && npm run build && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MatthewCharlton/auditor-ci.git"
  },
  "keywords": [
    "CI",
    "security",
    "audit"
  ],
  "author": "MatthewCharlton",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MatthewCharlton/auditor-ci/issues"
  },
  "homepage": "https://github.com/MatthewCharlton/auditor-ci#readme",
  "dependencies": {
    "npm-audit-html": "^1.3.2",
    "yarn-audit-html": "^1.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-jest": "^24.0.0",
    "babel-preset-airbnb": "^3.0.0",
    "jest": "^24.8.0",
    "rollup": "^1.11.3"
  }
}
